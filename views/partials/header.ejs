<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <%#
    If the locals.loggedin - Show account management button and logout button
    If not locals.loggedin - Show login button
    %>

    <% if (locals.loggedin) { %>
      <a href="/account/" title="Click to manage your account">Welcome, <%= locals.accountData.account_firstname %></a>
      <a href="/newsletter/" title="Click here to see newsletters">Newsletters</a>
      <a title="Click to logout" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>

  </div>
</header>