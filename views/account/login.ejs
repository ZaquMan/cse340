<%# Content Heading
	Use the page's title as the heading 
	or redirect back to the home page. %>

<% if (title) { %>
<h1><%= title %></h1>
<% } else {
	res.redirect('/')
} %>

<%# Display flash messages, if any are present %>
<%- messages() %>

<form method="post" id="account-login">
	<fieldset>
		<label for="account_email" required>Email:</label>
		<input id="account_email" type="email" name="account_email">
		<label for="account_password" required>Password:</label>
		<input type="password" name="account_password" id="account_password">
		<button type="submit">LOGIN</button>
		<p>No account? <a href="/account/register">Sign-up</a></p>
	</fieldset>
</form>